function todosProcesos()
{
    ps -o pid,ruser=Usuario,comm=Proceso a
}

function procesosUsuario()
{
    respuesta="??"
    while [ "$respuesta" != "" ]
    do
	verifUser
    done
}

function listaProcesos()
{
    echo -n "Desea ver procesos de todo el sistema (1), o de un usuario (2)? "
    read input
    if [ $input -eq 1 ]
    then
	todosProcesos
    else
	procesosUsuario
    fi
    read ff
}
